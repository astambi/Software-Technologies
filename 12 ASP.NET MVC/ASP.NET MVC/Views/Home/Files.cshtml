@{
    ViewBag.Title = "Home Page";
}

<h2>Listing Files in @ViewBag.Path</h2>

<form>
    <input type="text" name="path" />
    <input type="submit"/>
</form>

@model List<string>

<div>
    @*<a href="\Home\Files\?path=@ViewBag.ParentFolder">Parent Folder</a>*@
    @Html.ActionLink("Parent Folder", "Files", new { path = ViewBag.ParentFolder})
</div>

@foreach (string file in Model)
{
    <div>
        @*<a href="\Home\Files\?path=@file">@file</a>*@
        @Html.ActionLink(file, "Files", new { path = file})
    </div>
}